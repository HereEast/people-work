{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules"]
}
